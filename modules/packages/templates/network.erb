VLAN=@vlan
<% end %>

[Address]
Address=<%= @ipaddr %>

[Route]
Gateway=<%= @gateway %>
<% else %>
[Network]
DHCP=ipv4
DNS=192.168.20.6 192.168.20.7
Domains=caspersbox.com network.caspersbox.com
<% end %>
