<% if $ismaster == "true" %>
include                 "/var/named/chroot/etc/keys.d/caspersb-mdns01.key";
include                 "/var/named/chroot/etc/keys.d/caspersb-sdns01.key";
include                 "/var/named/chroot/etc/keys.d/caspersb-sdns02.key";

options {
    default-key         "caspersb-mdns01";
    default-server      127.0.0.1;
    default-port        10953;
};

server 192.168.20.6 {
    key                 "caspersb-sdns01";
};

server 192.168.20.7 {
    key                 "caspersb-sdns02";
};
<% else %>
include                 "/var/named/chroot/etc/keys.d/<%= scope.lookupvar("hostname") %>.key";

options {
    default-key         "<%= scope.lookupvar("hostname") %>";
    default-server      127.0.0.1;
    default-port        10953;
};
<% endif %>
