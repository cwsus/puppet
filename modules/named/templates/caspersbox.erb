zone "caspersbox.com" IN {
    <% if @ismaster == true %>
    type                    master;
    file                    "master/db.caspersbox.com";
    allow-update            { none; };
    allow-transfer          { key xfer-key; };
    <% else %>
    type                    slave;
    file                    "slave/db.caspersbox.com";
    masters                 { "mdns"; };
    allow-transfer          { key xfer-key; };
    allow-notify            { "mdns"; };
    notify                  no;
    <% end %>
};

